  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug active test suite",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "${file}",
        "--config",
        "${workspaceRoot}/package.json"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    },
  ]
}
