{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "stripInternal": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/node_modules/*",
    "**/lib/*",
    "**/dist/*",
    "**/__tests_/*"
  ]
}
